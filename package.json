{
  "name": "LearningSolidity",
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.4",
    "@nomicfoundation/hardhat-ignition": "^3.0.6",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.2",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.7",
    "chai": "^5.3.3",
    "ethers": "^6.16.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.1.4",
    "mocha": "^11.7.5",
    "typescript": "~5.8.0"
  },
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",

    "node": "hardhat node",

    "deploy:all": "hardhat run scripts/deploy-all.ts --network localhost",
    "deploy": "hardhat deploy",
    "deploy:sepolia": "hardhat run scripts/deploy-with-ethers.ts --network sepolia",

    "ignite:local": "hardhat ignition deploy ignition/modules/Counter.ts --network localhost",
    "ignite:sepolia": "hardhat ignition deploy ignition/modules/Counter.ts --network sepolia",

    "test": "hardhat test",
    "test:watch": "hardhat test --watch",

    "console": "hardhat console --network localhost",

    "check": "npm run build && npm run test"
  }
}
